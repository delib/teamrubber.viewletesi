<tal:viewlets repeat="viewlet viewlets">
    <tal:isESI condition="python:view.isESI(viewlet)">
        <div style="border:10px solid cyan;" tal:content="viewlet/render" />
    </tal:isESI>

    <tal:isntESI condition="not python:view.isESI(viewlet)">
        <div tal:replace="viewlet/render" />
    </tal:isntESI>
  
</tal:viewlets>